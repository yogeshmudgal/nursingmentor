<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_below="@+id/login_title"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#1a748d"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#1a748d"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="MENTOR App"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="visible">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/ad_card1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/ad_tv1"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/image_form"
                    android:layout_toRightOf="@+id/image_form"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="@string/section_a_header_1"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ad_card2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/ad_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/image_form"
                    android:layout_toRightOf="@+id/image_form"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="@string/section_b_header_1"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ad_card3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/ad_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/image_form"
                    android:layout_toRightOf="@+id/image_form"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="@string/section_c_header_1"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ad_card4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/ad_tv4"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/image_form"
                    android:layout_toRightOf="@+id/image_form"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="@string/section_d_header_1"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ad_card5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/ad_tv5"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/image_form"
                    android:layout_toRightOf="@+id/image_form"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="@string/section_e_header_1"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ad_card6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/ad_tv6"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/image_form"
                    android:layout_toRightOf="@+id/image_form"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="@string/section_f_header_1"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ad_card7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/ad_tv7"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/image_form"
                    android:layout_toRightOf="@+id/image_form"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="@string/section_g_header_1"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ad_card8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/ad_tv8"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/image_form"
                    android:layout_toRightOf="@+id/image_form"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="@string/section_h_label_1"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ad_card9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/ad_tv9"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/image_form"
                    android:layout_toRightOf="@+id/image_form"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="@string/section_i_label_1"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:padding="10dp"
        android:text="Click on 'Save' button to save the current record. And to edit the form click on 'Edit' button."
        android:textColor="#1a748d"
        android:textSize="22dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/compare_pdf_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/ad_compare"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Compare"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <Button
            android:id="@+id/ad_pdf"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="PDF"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/ad_cancel"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="EDIT"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/ad_save"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="SAVE"
            android:textColor="@android:color/white"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>


