<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">

        <include layout="@layout/header_activities" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout style="@style/ParentLinearLayoutForm2">

        <TextView
            style="@style/TextViewForAsteric2"
            android:text="@string/section_common_header_2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/infra_spinner1"
                style="@style/TextViewForAsteric"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/facility_type"
                android:text="@string/section_common_header_3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infra_spinner1_pre"
                style="@style/TextViewForAsteric"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/facility_type"
                android:text="@string/section_common_header_4"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/ParentLinearLayoutForm2">

        <TextView
            style="@style/TextViewForAsteric2"
            android:text="@string/section_g_label_1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rr_rg1"
                style="@style/TextViewForAsteric2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textSize="14sp">

            </TextView>

            <TextView
                android:id="@+id/rr_rg1_pre"
                style="@style/TextViewForAsteric2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textSize="14sp">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/ParentLinearLayoutForm3">

        <TextView
            style="@style/TextViewForAsteric2"
            android:text="@string/section_g_label_2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rr_rg3"
                style="@style/TextViewForAsteric2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textSize="14sp">

            </TextView>

            <TextView
                android:id="@+id/rr_rg3_pre"
                style="@style/TextViewForAsteric2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textSize="14sp">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/ParentLinearLayoutForm2">

        <TextView
            android:id="@+id/textView3"
            style="@style/TextViewForAsteric2"
            android:text="@string/section_g_label_3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rr_rg2"
                style="@style/TextViewForAsteric2"

                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textSize="14sp">

            </TextView>

            <TextView
                android:id="@+id/rr_rg2_pre"
                style="@style/TextViewForAsteric2"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textSize="14sp">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/ParentLinearLayoutForm3">

        <TextView
            android:id="@+id/textView4"
            style="@style/TextViewForAsteric2"
            android:text="@string/section_g_label_4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rr_rg4"
                style="@style/TextViewForAsteric2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textSize="14sp">

            </TextView>

            <TextView
                android:id="@+id/rr_rg4_pre"
                style="@style/TextViewForAsteric2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textSize="14sp">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rr_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/button_save"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/rr_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/button_back"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>