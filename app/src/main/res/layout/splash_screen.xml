<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_below="@+id/login_title">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_marginTop="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-20dp"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/mohfw" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2.7"
            android:layout_marginTop="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Ministry of Health and Family Welfare" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Government of India" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_marginTop="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/nhm_png_logo" />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/mentor_logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:tint="@color/primaryColor"
        android:src="@drawable/nurse" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mentor_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:text="@string/app_name"
        android:textColor="@color/primaryColor"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>